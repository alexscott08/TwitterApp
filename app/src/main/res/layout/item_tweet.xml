<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/profileImageView"
        android:textStyle="bold"
        tools:text="axs08" />

    <TextView
        android:id="@+id/bodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/profileImageView"
        tools:text="This is my tweet" />

    <ImageView
        android:id="@+id/embeddedImageView"
        android:layout_width="345dp"
        android:layout_height="150dp"
        android:layout_below="@+id/bodyTextView"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/profileImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/screenNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/nameTextView"
        android:ellipsize="end"
        tools:text="/@axs08" />

    <TextView
        android:id="@+id/retweetTextView"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/embeddedImageView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/retweetImgBtn"
        android:backgroundTint="#FFFFFF"
        android:textColor="#AAB8C2"
        android:textSize="12sp"
        tools:text="1000000" />

    <TextView
        android:id="@+id/favTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/embeddedImageView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/favImgBtn"
        android:background="#FFFFFF"
        android:textColor="#AAB8C2"
        android:textSize="12sp"
        tools:text="50" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/screenNameTextView"
        tools:text="â€¢ 7/2/20" />

    <ImageButton
        android:id="@+id/retweetImgBtn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/embeddedImageView"
        android:layout_marginStart="46dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/replyBtn"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <ImageButton
        android:id="@+id/favImgBtn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/embeddedImageView"
        android:layout_marginStart="25dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/retweetTextView"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/ic_vector_heart_stroke" />

    <Button
        android:id="@+id/replyBtn"
        android:layout_width="43dp"
        android:layout_height="17dp"
        android:layout_below="@+id/embeddedImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="11dp"
        android:background="@color/twitter_blue"
        android:radius="10dp"
        android:text="Reply"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>